              <section class="skill-title flex2" >Wilderness:</section>
              <section class="skill-value flex1">{{#if (gt system.attributes.knowledge.skills.wilderness.finalvalue -1)}}+{{/if}}{{system.attributes.knowledge.skills.wilderness.finalvalue}}</section>
