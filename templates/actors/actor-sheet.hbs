            <span class="item-name-label-medium">Blunt Weapons</span>
            <ul class="ul-level1">
              <li class="item flexrow list-item list-item-shadow">
                <span class="item-name-label-short">Attack</span>
                <span class="item-name-label-short">{{system.bonus.blunt.attack}}</span>
              </li>
              <li class="item flexrow list-item list-item-shadow">
                <span class="item-name-label-short">Damage</span>
                <span class="item-name-label-short">{{system.bonus.blunt.damage}}</span>
              </li>
            </ul>
          </li>
          {{/if}}
