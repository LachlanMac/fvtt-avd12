            <span class="item-name-label-medium">Piercing Weapons</span>
            <ul class="ul-level1">
              <li class="item flexrow list-item list-item-shadow">
                <span class="item-name-label-short">Attack</span>
                <span class="item-name-label-short">{{system.bonus.pierce.attack}}</span>
              </li>
              <li class="item flexrow list-item list-item-shadow">
                <span class="item-name-label-short">Damage</span>
                <span class="item-name-label-short">{{system.bonus.pierce.damage}}</span>
              </li>
            </ul>
          </li>
          {{/if}}
