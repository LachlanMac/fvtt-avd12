<ul class="stat-list alternate-list">
<div class="module-points-container flexrow">
    <!-- Module Points Input -->
     <div class="module-value-container">
    <label class="attribute-label flex1 module-label" for="change-module-points">Module Points</label>
    <input id="change-module-points" 
           type="text" 
           class="module-points-input item-field-label-short" 
           name="system.module_points" 
           value="{{system.module_points}}" 
           data-dtype="Number"/>
    </div>
   
    <div class="module-value-container">
    <label class="attribute-label flex1 module-label" for="total-module-points">Total Module Points</label>
    <span id="total-module-points" class="module-points-total">{{total_module_points}}</span>
    </div>
    <!-- Sync Modules Button -->
    <button id="sync-modules-btn" class="sync-button avd12-button flex1">
        Sync Modules
    </button>
</div>

             <li class="item flexrow list-item items-title-bg">
              <span class="item-name-label-header-long">
                <h3><label class="items-title-text">Ancestry</label></h3>
              </span>
            </li>
            {{#if ancestries}}
            {{#each ancestries as |ancestry key|}}
            <li class="item flexrow list-item list-item-shadow" data-item-id="{{ancestry._id}}">
              <a class="item-edit item-name-img" title="Edit Item"><img class="sheet-competence-img"
                  src="{{ancestry.img}}" /></a>
              <span class="item-name-label-long"><a class ="item-edit">{{ancestry.name}}</a></span>

              <div class="item-filler">&nbsp;</div>
              <div class="item-controls item-controls-fixed">
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
            {{/if}}



