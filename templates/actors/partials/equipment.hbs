<ul class="item-list alternate-list">
    <li class="item flexrow list-item items-title-bg">
        <span class="create-item flex-center" title="Edit Item" style="margin-left:4px;">
            <a class="item-control item-add" data-type="weapon" title="Create Item"><i class="fas fa-plus"></i></a>
        </span>
        <span class="flex1">
            <h3><label class="items-title-text">Weapons</label></h3>
        </span>
        <span class="flex3 flex-center" style="padding-top:5px;">
            <label class="items-title-text">Description</label>
        </span>
        <span class="flex1 item-control-empty"></span>
    </li>
    {{#each weapons as |weapon key|}}
    <li class="item flexrow list-item list-item-shadow" data-item-id="{{weapon._id}}">
        <a class="item-edit item-name-img flex-center" style="margin-left:4px;" title="Edit Item">
            <img class="sheet-competence-img flex-center" src="{{weapon.img}}" />
