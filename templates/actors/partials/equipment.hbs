        <span class="flex1 big-label side-border">{{weapon.name}}</span>
        <span class="flex3 item-description side-border">{{{weapon.system.description}}}</span>
        <span class="flex1 item-controls item-controls-fixed flex-center">
            <a title="Worn" class="item-equip">
                {{#if weapon.system.equipped}}
                <i class="fas fa-circle"></i>
                {{else}}
                <i class="far fa-circle"></i>
                {{/if}}
            </a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </span>
    </li>
    {{/each}}
</ul>

