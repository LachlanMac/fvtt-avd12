<div class="grid grid-2col">
 
            <li class="flexrow item">
              <label class="generic-label flex1">Origin</label>
              <select class="competence-base flex2" type="text" name="system.origin_trait" value="{{system.origin_trait}}" data-dtype="Number">
                {{#select system.origin_trait}}
                  <option value="1">Born Adventurer</option>
                  <option value="2">Pact Bound</option>
                  <option value="3">Mixed Ancestry</option>
                  <option value="4">Extra-Planar</option>
                  <option value="5">Vampire</option>
                  <option value="6">Lycanthrope</option>
                {{/select}}
              </select> 
            </li>
  
         <li class="flexrow item">
              <label class="generic-label flex1">Type</label>
              <select class="competence-base flex2" type="text" name="system.creature_type" value="{{system.creature_type}}" data-dtype="String">
                {{#select system.creature_type}}
                  {{> systems/avd12/templates/actors/partials/creature-type.hbs}}
                {{/select}}
              </select> 
            </li>

            <li class="flexrow item">
              <label class="generic-label flex1">Size</label>
              <select class="competence-base flex2" type="text" name="system.biodata.size" value="{{data.biodata.size}}" data-dtype="Number">
                {{#select system.biodata.size}}
                  <option value="1">Tiny</option>
                  <option value="2">Small</option>
                  <option value="3">Medium</option>
                  <option value="4">Large</option>
                  <option value="5">Huge</option>
                  <option value="6">Gargantuan</option>
                {{/select}}
              </select> 
            </li>

        <li class="item flexrow">
          <label class="generic-label flex1">Avd12 Id</label>
          <input type="text" class="system-uuid-input flex2" name="system.uuid" value="{{system.uuid}}" data-dtype="String" />
        </li>
        
        </li class="item flexrow">
        <li>

        <li >
             {{#if isGM}}
            <button 
            id="import-character" 
            class="flex0 avd12-button">Import Character</button>
            {{/if}}
        </li>
    
   </div>

      <hr>
 
      <h3>Background : </h3>
      <div class="form-group editor">
        {{editor data.biodata.description target="system.biodata.description" button=true owner=owner
        editable=editable}}
      </div>
      <hr>
      <h3>Notes : </h3>
      <div class="form-group editor">
        {{editor data.biodata.notes target="system.biodata.notes" button=true owner=owner editable=editable}}
      </div>
   
     
