{{#if character}}

<ul>
  <li class="item flexrow list-item items-title-bg">
    <span class="item-name-label-header-long">
      <h3><label class="items-title-text">Offense</label></h3>
    </span>
     <span class="flex0" style="margin-left:32px;"></span>
    <div class="flexrow list-item-content">
      <span class="item-name-label-short"><strong>Atk</strong></span>
      <span class="item-name-label-short"><strong>Dmg</strong></span>
    </div>
  </li>

  {{#each offense as |attack|}}
    {{#if (or (ne 0 attack.attack) (ne 0 attack.damage))}}
      <li class="item flexrow list-item list-item-shadow">
        <img class="roll-offense ui-dice flex0 flex-center"  width="24px" height="24px" src="systems/avd12/images/ui/D12_White.webp" data-damage-key="{{attack.damage_key}}" data-attack-key="{{attack.attack_key}}"/>
        <span class="item-name-label-medium">{{attack.name}}</span>
      
        <div class="flexrow list-item-content">
          <span class="item-name-label-short">{{#if (gt attack.attack -1)}}+{{/if}}{{attack.attack}}</span>
          <span class="item-name-label-short">{{#if (gt attack.damage -1)}}+{{/if}}{{attack.damage}}</span>
        </div>
      </li>
    {{/if}}
  {{/each}}
</ul>

{{else}}
    <ul class="stat-list alternate-list">
      <li class="item flexrow list-item items-title-bg">
        <span class="item-name-label-header-long">
          <h3><label class="items-title-text">NPC Skills</label></h3>
        </span>
      </li>
      <li class="item flexrow list-item list-item-shadow">
        <span class="item-name-label-medium">Attack</span>
        <ul class="ul-level1">
          <li class="item flexrow list-item list-item-shadow flex-center" >
            <span class="item-name-label-short">Accuracy</span>
            <input type="text" class="item-field-label-long flex2" name="system.bonus.npc.attack_accuracy" value="{{system.bonus.npc.attack_accuracy}}" data-dtype="Number"/>
          </li>
          <li class="item flexrow list-item list-item-shadow flex-center" >
            <span class="item-name-label-short">Power</span>
            <input type="text" class="item-field-label-long flex2" name="system.bonus.npc.attack_power" value="{{system.bonus.npc.attack_power}}" data-dtype="Number"/>
          </li>
        </ul>
      </li>
        <li class="item flexrow list-item list-item-shadow">
        <span class="item-name-label-medium">Spell Attack</span>
        <ul class="ul-level1">
          <li class="item flexrow list-item list-item-shadow flex-center" >
            <span class="item-name-label-short">Accuracy</span>
            <input type="text" class="item-field-label-long flex2" name="system.bonus.npc.spell_accuracy" value="{{system.bonus.npc.spell_accuracy}}" data-dtype="Number"/>
          </li>
          <li class="item flexrow list-item list-item-shadow flex-center" >
            <span class="item-name-label-short">Power</span>
            <input type="text" class="item-field-label-long flex2" name="system.bonus.npc.spell_power" value="{{system.bonus.npc.spell_power}}" data-dtype="Number"/>
          </li>
        </ul>
      </li>
    </ul>
{{/if}}