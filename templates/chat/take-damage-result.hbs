
  <hr>

  {{#if actor.img}}
  <div >
    <img class="chat-icon" src="{{actor.img}}" alt="{{actor.name}}" />
  </div>
  {{/if}}

  <div class="flexcol">
    <div>
      <ul>
        {{#if (eq actor.type 'npc')}}
        <li><b>{{actor.name}} took {{description}} {{damageType}} Damage!</b></li>
        {{else}}
        <li><b>{{actor.name}} took {{adjusted}} {{damageType}} Damage {{#if lifeline}}and they are now in Lifeline{{/if}}!</b></li>
        <li>Total Damage : {{totalDamage}} </li>
        <li>{{damageType}} Mitigation : {{mitigation}} </li>
        <li>Mitigation Modifier : {{damageModifier}} </li>
        {{/if}}
      </ul>  
    </div>
    </div>
    

