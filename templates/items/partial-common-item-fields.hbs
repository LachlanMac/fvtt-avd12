
<li class='flexrow'>
  <h3 class='item-field-label-long'>
    Mitigations
  </h3>
</li>

<li class='flexrow'>
  {{#each system.mitigation as |mitigation key|}}
    <div>
      <label class='item-field-label-short'>
        {{upperFirst key}}
      </label>
      <input
        type='text'
        class='item-field-label-short padd-right'
        name="system.mitigation.{{key}}.value"
        value="{{mitigation.value}}"
        data-dtype='Number'
      />
      <label>
        &nbsp;
      </label>
    </div>
  {{/each}}
</li>

